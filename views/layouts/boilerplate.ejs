<!-- we use this file as a boilerplate for all ejs file -->
<!-- as ejs-mate allows a functionality layout('path') method for this-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YelpCamp</title>
    <!-- CSS using cdn-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<!-- makes the body as flexible box -->
<!-- flex container should arrange its children in a column direction -->
<!-- vh-100 sets the 100 view height units-->
<body class="d-flex flex-column vh-100">
    <!-- used to include another ejs file here in same order -->
    <%- include('../partials/navbar')%>
    <main class="container mt-5">
        <%- include('../partials/flash')%> 
        <!-- all the sub ejs file are called as a body here -->
        <%- body %>
    </main>
    <!-- footer -->
    <%- include('../partials/footer')%>
    
    <!-- including js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>

    
    <script src='/javascripts/validateForms.js'></script>
</body>
</html>